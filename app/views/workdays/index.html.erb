<h2>Schedule for <%= l @date, :format => :very_long %></h2>

<div class="row">
  <div class="col-sm-2">
    <%= link_to "<< #{l (@date - 1.day), :format => :short}", workdays_path(:date => (@date - 1.day)), class: 'btn btn-block btn-info' %>
  </div>
  <div class="col-sm-offset-8 col-sm-2">
    <%= link_to "#{l (@date + 1.day), :format => :short} >>", workdays_path(:date => (@date + 1.day)), class: 'btn btn-block btn-info' %>
  </div>
</div>

<% @workdays.each do |workday| %>
  <div class="row">
    <div class="col-sm-3">
      <%= workday.user.id == current_user.id ? "<strong>#{workday.user.name}</strong>".html_safe : workday.user.name %>
    </div>
    <div class="col-sm-9">      
      <%= render :partial => 'common/slider', locals: {editable: false, workday: workday} %>
    </div>
  </div>
<% end %>

