<h2>Schedule</h2>
<div style="text-align:center;">
  <%= link_to '<< ' + l(@date - 1.month, :format => :month_name), schedule_path(current_user.id, month: (@date - 1.month).month, year: (@date - 1.month).year), class: 'pull-left' %>
  <%= l @date, :format => :month_name %> <%= @date.year %>
  <%= link_to l(@date + 1.month, :format => :month_name) + ' >>', schedule_path(current_user.id, month: (@date + 1.month).month, year: (@date + 1.month).year), class: 'pull-right' %>
</div>
<%= render :partial => 'calendar' %>
