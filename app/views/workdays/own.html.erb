<h2>My Schedule This Month</h2>
<table class="table">
  <thead>
    <tr>
      <th>Sunday</th>
      <th>Monday</th>
      <th>Tuesday</th>
      <th>Wednesday</th>
      <th>Thursday</th>
      <th>Friday</th>
      <th>Saturday</th>
    </tr>
  </thead>
  <tbody>
    <% @workweeks.each do |workdays| %>
      <tr>
      <% workdays.each do |workday| %>
        <td>
          <% unless workday.nil? %>
            <%= l workday.date, :format => :short %> <% unless workday.recurring_days.blank? %><i class="icon-refresh" title="recurring"></i><% end %>
            <br/>
            <%= render :partial => 'common/slider', locals: {editable: false, workday: workday, user: current_user} %>
            <%= link_to 'edit', edit_workday_path(workday) if can?(:schedule, Workday) || !workday.recurring? %>
            <%= link_to 'override', new_workday_path(date: workday.date) if can?(:schedule, Workday) && workday.recurring? %>
          <% end %>
        </td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Create New Schedule", new_workday_path if can? :schedule, Workday %>
