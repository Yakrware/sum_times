<%= form_for @employee, :url => url do |f| %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>
      
      <div class="form-group checkbox">
        <%= f.check_box :active, {}, true, false %>
        <%= f.label :active %>
      </div>
    </div>
  
    <div class="col-md-6">
      <h3>Options</h3>
      <%= render :partial => "options/form", :locals => {option: @employee.option, model_name: 'user', f: f} %>
    </div>
  </div>
  <%= f.submit class: 'btn btn-primary' %>
  <%= link_to 'Cancel', employee_path(@employee), class: 'btn btn-warning' %>
<% end %>
