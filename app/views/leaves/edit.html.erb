<h2>Edit Leave</h2>
<%= form_for @workday, :url => leave_path(@workday.id), html: { class: "form-horizontal leaves-form edit-leaves"} do |f| %>
  <div class="form-group">
    <%= label_tag 'leave[date]', 'Date', class: 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= text_field_tag 'leave[date]', @workday.date, class: 'form-control', disabled: true %>
    </div>
  </div>
  
  <%= render :partial => 'form', locals: {f: f} %>
  
  <div class="form-group">
    <%= f.submit 'Change Leave', class: 'btn btn-success' %>
  </div>
<% end %>
