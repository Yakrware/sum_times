<script>
    $(document).on("focus", "[data-behavior='datepicker']", function(e){
        $(this).datepicker({"format": "yyyy-mm-dd", "weekStart": 0, "autoclose": true});
    });
</script>

<%= form_for @holiday, :url => @holiday.persisted? ? admin_holiday_path(@holiday.id) : admin_holidays_path do |f| %>
  <% if @holiday.errors.any? %>
